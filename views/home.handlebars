<div>
  <button id="logOutUser">LogOut Here</button>
  <h1>Create A Post</h1>
  <form>
    <p>
      <label for="title">Title</label>
      <input type="text" name="title" id="title">
    </p>
    <p>
      <label for="body">Body</label>
      <textarea name="body" id="body" cols="20" rows="10"></textarea>
    </p>
    <button id="createPost">Create Post</button>
  </form>
  {{#each posts as |post|}}
  <div>
    <h3>{{post.title}}</h3>
    <h3>Created by {{post.user.username}}</h3>
    <p>{{post.body}}</p>
    <a href="/post/{{post.id}}">View Post</a>
  </div>
  {{/each}}
</div>

<script src="/public/js/createPost.js"></script>